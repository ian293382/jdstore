<div class="col-md-8 col-md-offset-2 admin-data-box">
  <hr style="size:2px" />
  <%= simple_form_for [:admin, @category] do |f| %>
    <%= f.input :category_group_id, :label => t('category-groups'), :collection => @category_groups, input_html: { class: 'width-50' } %>
    <%= f.input :name, :label => t('category-name') %>
    <span class="hidden-box"><%= f.input :is_hidden, :label => t('hide') %></span>
    <div class="form-actions">
      <%= f.submit t('submit'), class: 'btn btn-md btn-default' %>
    </div>
  <% end %>
</div>
